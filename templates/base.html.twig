            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('register_user') }}">Register</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Smart Workout
        </div>
    </footer>

<div class="container">
    {% block body %}{% endblock %}
</div>
</body>
</html>
