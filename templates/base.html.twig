            {% endif %}
        </ul>
        <ul class="navbar-nav">
            {% if app.user %}
                <li class="nav-item d-flex align-items-center">
                    <img src="/images/profil.png" alt="Profile Picture" class="profile-picture">

                    <span class="nav-link">Hello, {{ app.user.name }}</span>
                </li>
