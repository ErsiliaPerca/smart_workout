{% extends 'base.html.twig' %}

{% block title %}Workout Details{% endblock %}

{% block body %}
    <style>
        .card-body {
            padding: 0;
        }
        .card {
            background-color: rgba(var(--bs-white-rgb), var(--bs-text-opacity));
            color: #fff !important;
        }
        .card-body {
            padding: 0;
        }

        .table-custom-black th,
        .table-custom-black td {
            border-color: #000 !important;
        }
        .card-header
        {
            margin-top: 50px;
        }
    </style>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <h5 class="card-title">Workout Name: <span style="color: #fff;">{{ workout.name }}</span></h5>
                    <p class="card-text">Duration: <span style="color: #fff;">{{ totalDuration }} minutes</span></p>
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title">Exercise Log</h5>
                    </div>
                    <div class="card-body">

                        {% if workout.exerciselogs is not empty %}
                            <table class="table table-dark table-bordered text-white">
                                <thead>
                                <tr>
                                    <th>Exercise Name</th>
                                    <th>Duration</th>
                                    <th>Reps</th>
                                    <th>Sets</th>
                                    <th>Weight</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for exerciselog in workout.exerciselogs %}
                                    <tr>
                                        <td>{{ exerciselog.exercise.name }}</td>
                                        <td>{{ exerciselog.duration }}</td>
                                        <td>{{ exerciselog.reps }}</td>
                                        <td>{{ exerciselog.sets }}</td>
                                        <td>{{ exerciselog.weight }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <div class="alert alert-info" role="alert">
                                No exercise logs found for this workout.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

