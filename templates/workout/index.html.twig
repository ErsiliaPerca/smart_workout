{% extends 'base.html.twig' %}

{% block title %}Workouts!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title">Workouts</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Index</th>
                                <th>Name</th>
                                <th>Performed</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for workout in workouts %}
                                <tr>
                                    <td>{{ workout.id }}</td>
                                    <td>{{ workout.name }}</td>
                                    <td>{{ workout.createdAt|date("m/d/Y h:m") }}</td>
                                    <td>
                                        <button class="btn btn-danger btn-sm" onclick="deleteWorkout('{{ path('delete_workout', { 'id': workout.id }) }}')">Delete</button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">No records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('create_workout') }}" class="btn btn-success mt-3">Create Workout!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function deleteWorkout(url) {
            fetch(url, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
                .then(response => {
                    if (response.ok) {
                        location.reload(); // Refresh page after successful deletion
                    } else {
                        throw new Error('Failed to delete workout');
                    }
                })
                .catch(error => console.error('Error deleting workout:', error));
        }
    </script>
{% endblock %}

