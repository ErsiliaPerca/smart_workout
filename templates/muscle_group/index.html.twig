{% extends 'base.html.twig' %}

{% block title %}Muscle Groups{% endblock %}

{% block body %}
    <style>
        .table-container {
            width: 75%;
            max-height: 460px;
            overflow-y: scroll;
            padding-right: 15px;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.8);
            border: 1px solid rgba(0, 0, 0, 0.125);
            color: #fff;
        }

        .card-header {
            background-color: #28a745;
            color: #fff;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }

        .card-body {
            background-color: #1b2125;
            padding: 0;
        }

        .table {
            background-color: #343a40;
            color: #fff;
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .table th,
        .table td {
            border: 1px solid rgba(0, 0, 0, 0.125);
            padding: 8px;
            text-align: left;
        }
        .table-container::-webkit-scrollbar {
            width: 12px;

        }

        .table-container::-webkit-scrollbar-track {
            background: #343a40;
        }

        .table-container::-webkit-scrollbar-thumb {
            background-color: #6c757d;
            border-radius: 20px;
            border: 3px solid #343a40;
        }

        .table-container::-webkit-scrollbar-thumb:hover {
            background-color: #5a6268;
        }
        .icon-btn {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            width: 35px;
            height: 35px;

            border-radius: 50%;
            cursor: pointer;
            position: fixed;
            overflow: hidden;
            transition: width 0.3s ease-in-out;
            font-family: inherit;
            box-shadow: 2px 2px 10px rgb(14, 55, 36);
            border-color: #41af48;
            /* border: none;*/
            background-color: #1b2125;
            bottom: 100px;
            right: 20px;
            margin-bottom: 5px;
            z-index: 1000;

        }

        .icon {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.3s ease-in-out;
        }

        .icon svg {
            width: 17px;
            height: 24px;
            stroke: #1db954;
            fill: none;
            transition: fill 0.3s, stroke 0.3s;
        }

        .text {
            position: absolute;
            opacity: 0;
            right: 0%;
            width: 0%;
            color: white;
            font-size: 1em;
            font-weight: 600;
            transition: opacity 0.3s ease-in-out;
        }

        .icon-btn:hover {
            width: 125px;
            background: linear-gradient(to right, #1db954, #075e54);
            border-radius: 40px;
            /*padding: 0 10px;*/
        }

        .icon-btn:hover .icon {
            transform: translateX(-30%);
            width: 30%;
            transition-duration: .3s;
            padding-left: 20px;
            color: #00ff75;
            display: none;
        }

        .icon-btn:hover .text {
            opacity: 1;
            width: 100%;
            font-size:11px;
            transition-duration: .3s;
            padding-right: 10px;
        }
        .icon-btn {
            transform: translate(2px, 2px);
        }
        .icon svg {
            width: 30px;
            height: 30px;
            stroke: #1db954;
            fill: none;
            transition: fill 0.3s, stroke 0.3s;
        }
        .icon-btn button svg {
            width: 1em;
            height: 1em;
            margin-right: 0.3em;
        }
    </style>

    <div class="container mt-4 table-container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title">Muscle Groups</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-dark">
                            <thead>
                            <tr>
                                <th>Index</th>
                                <th>Name</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for muscleGroup in muscleGroups %}
                                <tr>
                                    <td>{{ muscleGroup.id }}</td>
                                    <td>{{ muscleGroup.name }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">No records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="icon-btn" onclick="window.location.href='{{ path('create_muscle_group') }}'">
        <div class="icon">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
{#                <path d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z" stroke-width="1.5"></path>#}
                <path d="M8 12H16" stroke-width="1.5"></path>
                <path d="M12 16V8" stroke-width="1.5"></path>
            </svg>
        </div>
        <span class="text">Create Muscle Group</span>
    </button>
{% endblock %}
