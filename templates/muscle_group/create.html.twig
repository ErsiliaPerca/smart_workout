{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Create Muscle Group!{% endblock %}

{% block body %}
    <style>
        .input-text {
            color: white !important;
        }
        .card {

            background-color: #22272d;
            border: 1px solid rgba(0, 0, 0, 0.125);
            color: #fff; /* Text alb */
        }
        .card-header {
            background-color: rgb(25, 135, 84);
            color: #fff; /* Alb */
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
        .card-body {
            background-color: #22272d !important;
        }
        .form-label {
            color: #fff;
        }
        .form-control {
            background-color: #22272d ;
            color: #fff;
            border-color: #6c757d;
        }

        .btn-success {
            background-color: #1c6142;
            border-color: #145135;
        }
        .btn-success:hover {
            background-color: #469873;
            border-color: #305c48;
        }
    </style>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-white">
            <p id="heading">Create Muscle Group</p>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="field">
                {{ form_label(form.name, 'Muscle group Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'input-field', 'placeholder': form.name.vars.label}}) }}
            </div>

            {{ form_widget(form.button, {'attr': {'class': 'input-field input-text'}}) }}
            {{ form_end(form) }}
        </div>

    </div>
        </div>
    </div>
</div>
{% endblock %}

