{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <style>
        .anchor {
            text-decoration: none;
                    color: #fff;
                    width: 100%;
                }
                .card {
                    background-color: rgba(var(--bs-success-rgb), var(--bs-bg-opacity));
                    color: #fff;
                    margin-bottom: 20px;
                    border: none;

                }
                .card-header {
                    background-color: #343a40;
                    color: #fff;
                    border: none;
                    padding: 10px 20px;
                }
                .user-details {
                    background-color: rgb(24, 122, 77);
                    color: #fff;
                    padding: 20px;
                    margin-bottom: 20px;
                    border-radius: 15px;
                }
                .user-details h1 {
                    color: #fff;
                    margin-top: 0;
                    font-size: 2rem;
                }
                .user-details p {
                    margin-bottom: 0;
                }
                .workouts {
                    margin-bottom: 20px;
                }
                .list-group-item {
                    background-color: rgba(255, 255, 255, 0.05);
                    border-color: #000;
                }
                .list-group-item:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }
                .alert-info {
                    background-color: #343a40;
                    color: #fff;
                    border: none;
                    padding: 15px;
                    margin-bottom: 20px;
                }
    </style>
    <div class="container">
        <div class="user-details">
            <h1>User Details</h1>
            <p><strong>Name:</strong> {{ user.name }}</p>
                        <p><strong>Email:</strong> {{ user.email }}</p>
        </div>

        {% if user.workouts is not empty %}
            <div class="workouts">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Workouts</h2>
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for workout in user.workouts %}
                            <li class="list-group-item" style="display: flex">
                                <a class="anchor" href="{{ path('show_workout', { 'id': workout.id }) }}">
                                    {{ workout.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                No workouts found for this user.
            </div>
        {% endif %}
    </div>
{% endblock %}
