{% extends 'base.html.twig' %}

{% block title %}Register User!{% endblock %}

{% block body %}
    <style>
        .form {
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 1em;
            background-color: #171717;
            border-radius: 15px;
            transition: 0.4s ease-in-out;
            max-width: 350px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .card {
            background-image: linear-gradient(163deg, #00ff75 0%, #3700ff 100%);
            border-radius: 12px;
            transition: all 0.3s;
            padding: 2px;
            max-width: 350px;
            margin: 30px auto 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .card2 {
            border-radius: 0;
            transition: all 0.2s;
        }

        .card2:hover {
            transform: scale(0.98);
            border-radius: 20px;
        }

        .button1 {
            padding: 0.5em;
            padding-left: 1.1em;
            padding-right: 1.1em;
            border-radius: 5px;
            margin-right: 0.5em;
            border: none;
            outline: none;
            transition: 0.4s ease-in-out;
            background-color: #252525;
            color: white;
        }

        .button1:hover {
            background-color: black;
            color: white;
        }

        .card:hover, .form:hover .card {
            box-shadow: 0px 0px 30px 1px rgba(0, 255, 117, 0.3);
            transform: scale(1.02);
        }

        #heading {
            text-align: center;
            margin: 2em;
            color: rgb(255, 255, 255);
            font-size: 1.2em;
        }

        .field {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5em;
            border-radius: 25px;
            padding: 0.6em;
            border: none;
            outline: none;
            color: white;
            background-color: #171717;
            box-shadow: inset 2px 5px 10px rgb(5, 5, 5);
        }

        .input-icon {
            height: 1.3em;
            width: 1.3em;
            fill: white;
        }

        .input-field {
            background: none;
            border: none;
            outline: none;
            width: 100%;
            color: #d3d3d3;
        }

        .form .btn {
            display: flex;
            justify-content: center;
            flex-direction: row;
            margin-top: 2.5em;
        }

        .button1 {
            padding: 0.5em 1.1em;
            width: 100%;
            border-radius: 5px;
            margin-right: 0.5em;
            border: none;
            outline: none;
            transition: 0.4s ease-in-out;
            background-color: #252525;
            color: white;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            font-size: 1em;
            cursor: pointer;
        }

        .button1:hover {
            background-color: black;
        }

        .button2 {
            padding: 0.5em 2.3em;
            border-radius: 5px;
            border: none;
            outline: none;
            transition: 0.4s ease-in-out;
            background-color: #252525;
            color: white;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            font-size: 1em;
            cursor: pointer;
        }

        .button2:hover {
            background-color: black;
        }

        .button3 {
            margin-bottom: 3em;
            padding: 0.5em;
            border-radius: 5px;
            border: none;
            outline: none;
            transition: 0.4s ease-in-out;
            background-color: #252525;
            color: white;
        }

        .button3:hover {
            background-color: red;
            color: white;
        }

        .submit-button {
            background: white;
        }
    </style>
    <div class="card">
        <div class="card2">
            <form class="form" method="post" action="{{ path('register_user') }}">
                <p id="heading">Register</p>
                {% if errorMessage is defined and errorMessage is not empty %}
                    <div class="alert alert-danger">{{ errorMessage }}</div>
                {% endif %}


                {{ form_start(form) }}

                <div class="field">
                    {{ form_widget(form.name, {'attr': {'class': 'input-field', 'placeholder': form.name.vars.label}}) }}
                </div>
                <div class="field">
                    {{ form_widget(form.email, {'attr': {'class': 'input-field', 'placeholder': form.email.vars.label}}) }}
                </div>
                <div class="field">
                    {{ form_widget(form.password, {'attr': {'class': 'input-field', 'placeholder': form.password.vars.label}}) }}
                </div>

                <div>
                    {{ form_widget(form.button, {'attr': {'class': 'button1'}}) }}
                </div>

                {{ form_end(form) }}
            </form>
            {% if app.request.method == 'POST' and errorMessage is empty %}
                <div class="alert alert-success">Registration successful!</div>
            {% endif %}
        </div>
    </div>
{% endblock %}


