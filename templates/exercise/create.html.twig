{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Create Exercise{% endblock %}

{% block body %}
    <style>
        .input-text {
            color: white  ;
        }
        .card {
            background-color: #22272d;
            border: 1px solid rgba(0, 0, 0, 0.125);
            color: #fff;
        }
        .card-header {
            background-color: rgb(25, 135, 84);
            color: #fff;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
        .card-body {
            background-color: #22272d !important;
        }
        .form-label {
            color: #fff;
        }
        .form-control {
            background-color: #22272d;
            color: #fff;
            border-color: #6c757d;
        }
        .custom-select {
            background-color: #22272d;
            color: #fff;
            border-color: #6c757d;
        }
        .btn-success {
            background-color: #1c6142;
            border-color: #145135;
        }
        .btn-success:hover {
            background-color: #469873;
            border-color: #305c48;
        }
        .btn {
            background-color: #1c6142;
            color: #fff;
            margin-top: 5px;
            border-color: #145135;
        }
        .btn:focus,
        .btn.focus {
            box-shadow: none !important;
        }
        .alert-error {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 15px;
            margin-top: 15px;
            border-radius: 4px;
        }
    </style>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {% for label, messages in app.flashes %}
                    {% if label == 'error' %}
                        {% for message in messages %}
                            <div class="alert alert-error">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title">Create Exercise</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.name, 'Exercise Name', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.muscleGroup, 'Muscle Group', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.muscleGroup, {'attr': {'class': 'form-control custom-select'}}) }}
                            {{ form_errors(form.muscleGroup) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_widget(form.button, {'attr': {'class': 'btn btn-success'}}) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
