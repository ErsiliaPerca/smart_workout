{% extends 'base.html.twig' %}

{% block title %}Exercise Logs{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title">Exercise Logs for {{ exercise.name }}</h5>
                    </div>
                    <div class="card-body">
                        {% if exerciseLogs is not empty %}
                            <table class="table table-dark table-bordered">
                                <thead class="thead-light">
                                <tr>
                                    {% if isTrainer %}
                                        <th>User</th>
                                    {% endif %}
                                    <th>Workout Date</th>
                                    <th>Duration</th>
                                    <th>Reps</th>
                                    <th>Sets</th>
                                    <th>Weight</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for log in exerciseLogs %}
                                    <tr>
                                        {% if isTrainer %}
                                            <td>{{ log.workout.person.name }}</td>
                                        {% endif %}
                                        <td>{{ log.workout.createdAt|date("Y-m-d") }}</td>
                                        <td>{{ log.duration }}</td>
                                        <td>{{ log.reps }}</td>
                                        <td>{{ log.sets }}</td>
                                        <td>{{ log.weight }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p>No logs found for this exercise.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .card {
            background-color: rgba(var(--bs-white-rgb), var(--bs-text-opacity));
            color: #fff !important;
            opacity: 2;
        }

        .card-header {
            margin-bottom: 0;
        }

        .card-body {
            padding: 0;
        }

        .table-dark {
            color: #fff;
            background-color: #343a40;
        }

        .table-dark th,
        .table-dark td,
        .table-dark thead th {
            border-color: #454d55;
        }

        .table-dark.table-bordered th,
        .table-dark.table-bordered td {
            border: 1px solid #454d55;
        }

        .thead-light th {
            color: white;
            background-color: #212529;
            border-color: #dee2e6;
        }
        .table-container::-webkit-scrollbar {
            width: 12px;
        }

        .table-container::-webkit-scrollbar-track {
            background: #343a40;
        }

        .table-container::-webkit-scrollbar-thumb {
            background-color: #6c757d;
            border-radius: 20px;
            border: 3px solid #343a40;
        }

        .table-container::-webkit-scrollbar-thumb:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}
